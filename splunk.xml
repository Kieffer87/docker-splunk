<?xml version="1.0"?>
<Container version="2">
  <Name>Splunk</Name>
  <Repository>twod/docker-splunk</Repository>
  <Registry>https://hub.docker.com/repository/docker/twod/docker-splunk</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Project>https://github.com/splunk/docker-splunk</Project>
  <Overview>Splunk for unRAID based on the latest Splunk Docker release.</Overview>
  <Category>Tools:Utilities Network:Management Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:8000]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/Kieffer87/docker-splunk/master/splunkunraid.xml</TemplateURL>
  <Icon>https://secure.gravatar.com/avatar/c4cadc82a16e67018f57f1fc2547caa4.jpg</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1568943898</DateInstalled>
  <Description>Splunk for unRAID based on the latest Splunk Docker release. https://github.com/splunk/docker-splunk</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort></HostPort>
        <ContainerPort>8000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort></HostPort>
        <ContainerPort>8089</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort></HostPort>
        <ContainerPort>9997</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort></HostPort>
        <ContainerPort>1514</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir></HostDir>
      <ContainerDir>/opt/splunkdata</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
	<Volume>
      <HostDir></HostDir>
      <ContainerDir>/opt/splunk/etc/apps</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value/>
      <Name>SPLUNK_START_ARGS</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>SPLUNK_PASSWORD</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>PORT_SYSLOG</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>PORT_API</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>PORT_TCPIN</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Persistant Data Storage" Target="/opt/splunkdata" Default="/mnt/user/appdata/docker/splunk/splunkdata" Mode="rw" Description="Persistant Indexed Data (SPLUNK_DB)" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="Persistant Configuration Storage" Target="/opt/splunk/etc/apps" Default="/mnt/user/appdata/docker/splunk/etc/apps" Mode="rw" Description="Persistant config and app data" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="Splunk start args" Target="SPLUNK_START_ARGS" Default="--accept-license --no-prompt" Mode="" Description="Arguments to start Splunk with. " Type="Variable" Display="always" Required="true" Mask="false">--accept-license --no-prompt</Config>
  <Config Name="Admin Password" Target="SPLUNK_PASSWORD" Default="changeme2019" Mode="" Description="Splunk Web UI admin password." Type="Variable" Display="always" Required="true" Mask="true">changeme2019</Config>
  <Config Name="HTTP Web Port" Target="8000" Default="8000" Mode="tcp" Description="HTTP Web UI" Type="Port" Display="always" Required="true" Mask="false">8000</Config>
  <Config Name="UDP Syslog Port" Target="1514" Default="514" Mode="udp" Description="Syslog UDP input" Type="Port" Display="always" Required="false" Mask="false">514</Config>
  <Config Name="UF TCP Data Port" Target="9997" Default="9997" Mode="tcp" Description="SplunkTCP input" Type="Port" Display="always" Required="false" Mask="false">9997</Config>
  <Config Name="Management/API Port" Target="8089" Default="8089" Mode="tcp" Description="HTTPS API" Type="Port" Display="always" Required="false" Mask="false">8089</Config>

</Container>
